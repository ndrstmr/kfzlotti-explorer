{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,  // Phase 3: Full Strict Mode (inkl. noImplicitAny, strictNullChecks, etc.)
    "noUnusedLocals": true,  // Phase 4: Warnt bei ungenutzten Variablen
    "noUnusedParameters": true,  // Phase 4: Warnt bei ungenutzten Parametern
    "noFallthroughCasesInSwitch": true,  // Phase 4: Verhindert fehlende breaks

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
