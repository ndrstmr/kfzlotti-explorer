#!/bin/sh
# Pre-Commit Hook: Run linter before committing
# This prevents committing code with linter errors

echo "ğŸ” Running pre-commit checks..."

# Run linter
echo "ğŸ“ Running ESLint..."
bun run lint

# Check if linter passed
if [ $? -ne 0 ]; then
  echo "âŒ Linter failed! Fix the errors before committing."
  echo "   Run 'bun run lint' to see all errors."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
